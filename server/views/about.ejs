
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/favicon') %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/about.css">
    <link rel="stylesheet" href="/styles/Header.css">
    <link rel="stylesheet" href="/styles/Footer.css">
    <link rel="stylesheet" href="/styles/Buttons.css">

    <title>About</title>
</head>
<body>
<%- include('./partials/header'); %>

<div class="container my-5">
    <section class="row g-4">
        <!-- Address & Map in the Same Card -->
        <div class="col-md-12">
            <div class="card p-4 shadow">
                <h2>Our Address</h2>
                <p>123 Print Center Street, Cityname, Country</p>
                
                <div id="map" class="rounded shadow" style="width: 100%; height: 400px;"></div>
            </div>
        </div>

        <!-- Working Hours -->
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h2>Working Hours</h2>
                <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
                <p>Saturday: 10:00 AM - 4:00 PM</p>
                <p>Sunday: Closed</p>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h2>Contact Information</h2>
                <p>Email: <a href="mailto:contact@printcenter.com" class="text-decoration-none">contact@printcenter.com</a></p>
                <p>Phone: <a href="tel:+1234567890" class="text-decoration-none">+1 234 567 890</a></p>
            </div>
        </div>
    </section>
</div>

<%- include('./partials/footer'); %>

<script src="https://api-maps.yandex.ru/2.1/?lang=en_RU&apikey=fbdc0972-5e05-434e-bb16-6236571a6f3b"
        type="text/javascript"></script>
<script>
    ymaps.ready(init);

    function init() {
        const map = new ymaps.Map("map", {
            center: [55.7558, 37.6176],  // Example coordinates
            zoom: 15,
            type: 'yandex#map',  
        });

        const placemark = new ymaps.Placemark([55.7558, 37.6176], {
            hintContent: 'Print Center',
            balloonContent: 'Our print center is located here.'
        });

        map.geoObjects.add(placemark);
    }
</script>
</body>
</html>

