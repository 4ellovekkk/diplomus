<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/styles/profile.css">
</head>
<body>

<header>
    <nav>
        <div class="logo">Print Center</div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/profile" class="active">Profile</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/api/logout" class="btn">Logout</a></li>
        </ul>
    </nav>
</header>

<section class="profile-container">
    <div class="user-info">
        <h2>ðŸ‘¤ Personal Info</h2>
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Phone:</strong> <%= user.phone %></p>
        <p><strong>Address:</strong> <%= user.address %></p>
    </div>

    <div class="cart">
        <h2>ðŸ›’ Shopping Cart</h2>
        <% if (user.cart.length > 0) { %>
            <ul>
                <% user.cart.forEach(item => { %>
                    <li><strong><%= item.item %></strong> - $<%= item.price %> x <%= item.quantity %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>

    <div class="orders">
        <h2>ðŸ“¦ Previous Orders</h2>
        <% if (user.orders.length > 0) { %>
            <ul>
                <% user.orders.forEach(order => { %>
                    <li>
                        <strong>Order <%= order.id %></strong> - $<%= order.total %> (Status: <%= order.status %>) <br>
                        <small>Placed on <%= order.date %></small>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>You have no previous orders.</p>
        <% } %>
    </div>
</section>

<footer>
    <p>&copy; 2025 Print Center. All rights reserved.</p>
</footer>

</body>
</html>
