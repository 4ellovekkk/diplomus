<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/styles/Register.css">
    <script>
        $(document).ready(function () {
            $('#register-form').on('submit', function (e) {
                const password = $('#password').val();
                const repeatPassword = $('#repeat-password').val();

                if (password !== repeatPassword) {
                    e.preventDefault();
                    $('#error-message').text("Passwords do not match").show();
                }
            });

            $('#password, #repeat-password').on('input', function () {
                if ($('#password').val() === $('#repeat-password').val()) {
                    $('#error-message').hide();
                }
            });
        });
    </script>
</head>
<body>
<div class="register-container">
    <h1>Register</h1>
    <p>Create your account to get started.</p>
    <form id="register-form" action="/api/register" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="form-group">
            <label for="repeat-password">Repeat Password</label>
            <input type="password" id="repeat-password" name="repeat-password" required>
        </div>
        <p id="error-message" style="color: red; display: none;"></p>
        <button type="submit" class="register-button">Register</button>
    </form>
    <div class="footer">
        <p>Already have an account? <a href="/api/login">Login here</a></p>
    </div>
</div>
</body>
</html>
