

<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= __('services_title') %> - Print Center</title>
    <%- include('./partials/favicon') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/Header.css"/>
    <link rel="stylesheet" href="/styles/Footer.css"/>
    <link rel="stylesheet" href="/styles/Buttons.css"/>
</head>
<body>

<%- include('./partials/header'); %>

<!-- Hero Section -->
<section class="text-black py-5 text-center">
    <div class="container">
        <h1 class="display-5 mb-3"><%= __('services_heading') %></h1>
        <p class="lead"><%= __('services_subheading') %></p>
    </div>
</section>

<!-- Services Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">

            <div class="col-md-6 col-lg-4">
                <a href="/copy" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/photocopy.jpg" class="card-img-top" alt="<%= __('photocopy_alt') %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= __('photocopy_title') %></h5>
                            <p class="card-text"><%= __('photocopy_description') %></p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-4">
                <a href="/print" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/printing.jpg" class="card-img-top" alt="<%= __('printing_alt') %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= __('printing_title') %></h5>
                            <p class="card-text"><%= __('printing_description') %></p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-6 col-lg-4">
                <a href="/merch" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="/images/merch.jpg" class="card-img-top" alt="<%= __('merch_alt') %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= __('merch_title') %></h5>
                            <p class="card-text"><%= __('merch_description') %></p>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
</section>

<%- include('./partials/footer'); %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

