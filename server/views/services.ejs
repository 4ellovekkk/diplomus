
<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= __('services_title') %> - Print Center</title>
    <%- include('./partials/favicon') %>
    <link rel="stylesheet" href="/styles/Services.css">
    <link rel="stylesheet" href="/styles/Header.css">
    <link rel="stylesheet" href="/styles/Buttons.css">
    <link rel="stylesheet" href="/styles/Footer.css">
</head>
<body>

<%- include('./partials/header'); %>

<section class="hero">
    <div class="hero-content">
        <h1><%= __('services_heading') %></h1>
        <p><%= __('services_subheading') %></p>
    </div>
</section>

<section class="services">
    <a href="/copy">
        <div class="service">
            <img src="/images/photocopy.jpg" alt="<%= __('photocopy_alt') %>">
            <h2><%= __('photocopy_title') %></h2>
            <p><%= __('photocopy_description') %></p>
        </div>
    </a>
    <a href="/print">
        <div class="service">
            <img src="/images/printing.jpg" alt="<%= __('printing_alt') %>">
            <h2><%= __('printing_title') %></h2>
            <p><%= __('printing_description') %></p>
        </div>
    </a>
    <a href="/merch">
        <div class="service">
            <img src="/images/merch.jpg" alt="<%= __('merch_alt') %>">
            <h2><%= __('merch_title') %></h2>
            <p><%= __('merch_description') %></p>
        </div>
    </a>
</section>

<%- include('./partials/footer'); %>
</body>
</html>

