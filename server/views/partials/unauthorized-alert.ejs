<div class="alert alert-danger alert-dismissible fade show unauthorized-alert" role="alert">
  <strong><%= __('unauthorized_title') %></strong>
  <p><%= __('unauthorized_message') %></p>
  <div class="mt-2">
    <a href="/api/login" class="btn btn-danger btn-sm"><%= __('login_button') %></a>
    <a href="/api/register" class="btn btn-sm ms-2"><%= __('sign_up') %></a>
  </div>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> 