
<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <%- include('./partials/favicon') %>
    <link rel="stylesheet" href="/styles/LoginStyles.css"> <!-- Optional for custom tweaks -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/Buttons.css">
</head>
<body>
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-box p-4 border rounded shadow-sm">
        <h1 class="text-center mb-3"><%= __('welcome') %></h1>
        <p class="text-center mb-4"><%= __('login_prompt') %></p>

        <!-- Language Switch Links -->
        <div class="mb-4">
            <select id="language-select" class="form-select" onchange="changeLanguage(this.value)">
                <option value="en" <%= locale === 'en' ? 'selected' : '' %>>English</option>
                <option value="ru" <%= locale === 'ru' ? 'selected' : '' %>>Русский</option>
            </select>
        </div>

        <!-- Regular Login Form -->
        <form action="/api/login" method="POST">
            <div class="mb-3">
                <label for="identifier" class="form-label"><%= __('email_label') %></label>
                <input type="text" id="identifier" name="identifier" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><%= __('password_label') %></label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn w-100"><%= __('login_button') %></button>
        </form>

        <!-- Google Login Button -->
        <div class="mt-4 text-center">
            <p><%= __('google_login') %></p>
            <a href="/auth/google" class="google-btn">
                <img src="/images/google-logo.png" width="20%" height="20%" alt="Google Logo">
            </a>
        </div>
        <div class="text-center">
            <a href="/forgot-password" ">
                <%= __('forgot_password') %>
<br>
            <a href="/api/register"><%= __('sign_up') %></a></p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function changeLanguage(lang) {
        const redirectTo = window.location.pathname + window.location.search;
        const url = `/set-locale?lang=${lang}&redirectTo=${encodeURIComponent(redirectTo)}`;
        window.location.href = url;
    }
</script>
</body>
</html>

