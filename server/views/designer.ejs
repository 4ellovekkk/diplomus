<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Graphic Design Consultation</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      width: 90%;
      max-width: 600px;
      margin: 1rem auto;
      background: white;
      padding: 1.5rem;
      border-radius: 8px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      flex: 1;
    }

    h1 {
      text-align: center;
      color: #222;
      margin-bottom: 1rem;
      font-size: 1.5rem;
    }

    form {
      display: flex;
      flex-direction: column;
      width: 90%;
      margin: 10px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.3rem;
      margin-bottom: 0.8rem;
    }

    label {
      font-weight: bold;
      font-size: 0.85rem;
      color: #444;
    }

    input, select, textarea {
      padding: 0.6rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 0.9rem;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #ff5722;
      box-shadow: 0 0 0 2px rgba(255, 87, 34, 0.2);
    }

    input[type="file"] {
      padding: 0.3rem;
      border: 1px dashed #ccc;
      background-color: #f9f9f9;
      font-size: 0.85rem;
    }

    input[type="checkbox"] {
      width: auto;
      align-self: flex-start;
      transform: scale(1.2);
      margin-top: 0.2rem;
    }

    button {
      background-color: #ff5722;
      color: white;
      padding: 0.7rem;
      border: none;
      border-radius: 4px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background-color 0.3s;
      font-weight: 600;
      margin-top: 0.3rem;
      max-width: 300px;
    }

    button:hover {
      background-color: #e64a19;
    }

    #fileInfo {
      font-style: italic;
      color: #666;
      font-size: 0.8rem;
      margin-top: -0.3rem;
      margin-bottom: 0.3rem;
    }

    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }

      form {
        gap: 0.6rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Book a Graphic Design Consultation</h1>

    <div id="unauthorized-message" style="display: none;">
        <%- include('./partials/unauthorized-alert') %>
    </div>

    <form action="/consultation" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="fullName">Your Name</label>
        <input type="text" id="fullName" name="fullName" required>
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="service">Design Service</label>
        <select id="service" name="service" required>
          <option value="">Choose a service...</option>
          <option value="logo">Logo Design</option>
          <option value="branding">Branding</option>
          <option value="social">Social Media Graphics</option>
          <option value="print">Print Materials</option>
        </select>
      </div>

      <div class="form-group">
        <label for="description">Project Description</label>
        <textarea id="description" name="description" rows="4" required></textarea>
      </div>

      <div class="form-group">
        <label for="referenceFile">Upload Reference File (optional)</label>
        <input type="file" id="referenceFile" name="referenceFile">
        <div id="fileInfo">PDF, PNG, JPG, max 5MB</div>
      </div>

      <div class="form-group form-check">
        <label>
          <input type="checkbox" name="urgent" value="yes"> Urgent request
        </label>
      </div>

      <button type="submit">Submit Consultation Request</button>
    </form>
  </div>

  <script>
  document.addEventListener('DOMContentLoaded', function() {
      const designForm = document.querySelector('form');
      const unauthorizedMessage = document.getElementById('unauthorized-message');

      if (designForm) {
          designForm.addEventListener('submit', async function(e) {
              e.preventDefault();

              try {
                  const response = await fetch('/api/cart/data');
                  if (response.ok) {
                      // User is logged in, submit the form
                      this.submit();
                  } else {
                      // User is not logged in, show error message
                      unauthorizedMessage.style.display = 'block';
                      window.scrollTo({ top: 0, behavior: 'smooth' });
                  }
              } catch (error) {
                  console.error('Error checking authentication:', error);
                  unauthorizedMessage.style.display = 'block';
                  window.scrollTo({ top: 0, behavior: 'smooth' });
              }
          });
      }
  });
  </script>
</body>
</html>
