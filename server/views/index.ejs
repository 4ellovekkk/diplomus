
<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Print Center</title>
    <%- include('./partials/favicon') %>

<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/Footer.css">
    <link rel="stylesheet" href="/styles/Buttons.css">
</head>
<body>

<!-- Navigation Bar -->
<%- include('./partials/header'); %>

<!-- Hero Section -->
<section class="bg-light text-center py-5">
    <div class="container">
        <h1 class="display-5 mb-3"><%= __('hero_title') %></h1>
        <p class="lead mb-4"><%= __('hero_description') %></p>
        <%- include('./partials/button', { href: '/services', text: __('explore_services') }); %>
    </div>
</section>

<!-- Services Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5"><%= __('our_services') %></h2>
        <div class="row g-4">

            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-print fa-2x mb-3 text-primary"></i>
                        <h5 class="card-title"><%= __('document_printing') %></h5>
                        <p class="card-text"><%= __('document_printing_desc') %></p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <%- include('./partials/button', { href: '/print', text: __('learn_more') }); %>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-copy fa-2x mb-3 text-success"></i>
                        <h5 class="card-title"><%= __('copy_scanning') %></h5>
                        <p class="card-text"><%= __('copy_scanning_desc') %></p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <%- include('./partials/button', { href: '/copy', text: __('learn_more') }); %>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-paint-brush fa-2x mb-3 text-warning"></i>
                        <h5 class="card-title"><%= __('graphic_design') %></h5>
                        <p class="card-text"><%= __('graphic_design_desc') %></p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <%- include('./partials/button', { href: '/graphic-design', text: __('learn_more') }); %>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-tshirt fa-2x mb-3 text-danger"></i>
                        <h5 class="card-title"><%= __('merch_design') %></h5>
                        <p class="card-text"><%= __('merch_design_desc') %></p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <%- include('./partials/button', { href: '/merch', text: __('learn_more') }); %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<%- include('./partials/footer') %>

<!-- Bootstrap Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

