
<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= __('xerox_title') %></title>
  <link rel="stylesheet" href="/styles/Copy.css">
  <link rel="stylesheet" href="/styles/Header.css">
  <link rel="stylesheet" href="/styles/Footer.css">
  <link rel="stylesheet" href="/styles/Buttons.css">
  <%- include('./partials/favicon') %>
</head>
<body>
<%- include('./partials/header') %>

<div class="container">
  <h1><%= __('xerox_heading') %></h1>
  <p><%= __('xerox_intro') %></p>

  <h2><%= __('why_choose_us') %></h2>
  <ul>
    <li><%= __('feature_fast') %></li>
    <li><%= __('feature_affordable') %></li>
    <li><%= __('feature_high_quality') %></li>
    <li><%= __('feature_sizes') %></li>
    <li><%= __('feature_sided') %></li>
  </ul>

  <h2><%= __('pricing') %></h2>
  <table>
    <tr>
      <th><%= __('type') %></th>
      <th><%= __('price_per_page') %></th>
    </tr>
    <tr>
      <td><%= __('bw_a4') %></td>
      <td>$0.10</td>
    </tr>
    <tr>
      <td><%= __('color_a4') %></td>
      <td>$0.25</td>
    </tr>
    <tr>
      <td><%= __('bw_a3') %></td>
      <td>$0.20</td>
    </tr>
    <tr>
      <td><%= __('color_a3') %></td>
      <td>$0.50</td>
    </tr>
  </table>

  <h2><%= __('how_to_order') %></h2>
  <p><%= __('order_instructions') %></p>
</div>

<%- include('./partials/footer') %>
</body>
</html>

